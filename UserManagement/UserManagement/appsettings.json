{
   "ConnectionStrings": {
      "DefaultConnection": ""
   },
   "AzureAd": {
      "Instance": "https://login.microsoftonline.com/",
      "Domain": "your domain",
      "TenantId": "your tennant id",
      "ClientId": "your client id",
      "Scopes": "Users.Read",
      "ClientSecret": "Client secret from app-registration. Check user secrets/azure portal."
   },
   "Application": {
      "Name": "Test App",
      "Url": "https://pippo.com/api",
      "DefaultPageSize": 50
   },
   "Serilog": {
      "Using": [
         "Serilog.Sinks.File"
      ],
      "MinimumLevel": {
         "Default": "Warning",
         "Override": {
            "Microsoft": "Warning",
            "System": "Warning"
         }
      },
      "WriteTo": [
         {
            "Name": "File",
            "Args": {
               "path": "log/UserManagement-.log",
               "rollingInterval": "Day",
               "retainedFileCountLimit": 7,
               "rollOnFileSizeLimit": true,
               "fileSizeLimitBytes": 104857600,
               "buffered": true,
               "flushToDiskInterval": "00:00:01",
               "restrictedToMinimumLevel": "Warning",
               "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
               "outputTemplate": "{Timestamp:o}|[{Level:u3}]|({MachineName}/{Application}/{SourceContext})|{Properties}|{Message:lj}{NewLine}{Exception}"
            }
         }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
      "Properties": {
         "Application": "UserManagement.Api"
      }
   },
   "AllowedHosts": "*"
}
